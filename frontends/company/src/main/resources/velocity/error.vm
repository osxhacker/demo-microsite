<section class="error">
    <h3 class="content-subhead">Error</h3>

    <div class="pure-g">
        <div class="pure-u-1-3">Status:</div>
        <div class="pure-u-2-3">${body.get("status").asText()}</div>
    </div>

    <div class="pure-g">
        <div class="pure-u-1-3">Title:</div>
        <div class="pure-u-2-3">${body.get("title").asText()}</div>
    </div>

    #if( $body.get("detail") != $null )
    <div class="pure-g">
        <div class="pure-u-1-3">Detail:</div>
        <div class="pure-u-2-3">${body.get("detail").asText()}</div>
    </div>
    #end
</section>

